                TimeOffs="{Binding TimeOffs[42]}" />
        <uc:UserCalendarCell
                Grid.Row="5"
                Grid.Column="3"
                DisplayDate="{Binding Dates[43]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[43]}" />
        <uc:UserCalendarCell
                Grid.Row="5"
                Grid.Column="4"
                DisplayDate="{Binding Dates[44]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[44]}" />
        <uc:UserCalendarCell
                Grid.Row="5"
                Grid.Column="5"
                DisplayDate="{Binding Dates[45]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[45]}" />
        <uc:UserCalendarCell
                Grid.Row="5"
                Grid.Column="6"
                DisplayDate="{Binding Dates[46]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[46]}" />

        <uc:UserCalendarCell
                Grid.Row="6"
                Grid.Column="0"
                DisplayDate="{Binding Dates[50]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[50]}" />
        <uc:UserCalendarCell
                Grid.Row="6"
                Grid.Column="1"
                DisplayDate="{Binding Dates[51]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[51]}" />
        <uc:UserCalendarCell
                Grid.Row="6"
                Grid.Column="2"
                DisplayDate="{Binding Dates[52]}"
