            TimeOffs="{Binding TimeOffs[15]}" />
        <uc:UserCalendarCell
            Grid.Row="4"
            Grid.Column="2"
            DisplayDate="{Binding Dates[16]}"
            Holidays="{Binding Holidays}"
            TimeOffs="{Binding TimeOffs[16]}" />
        <uc:UserCalendarCell
            Grid.Row="4"
            Grid.Column="3"
            DisplayDate="{Binding Dates[17]}"
            Holidays="{Binding Holidays}"
            TimeOffs="{Binding TimeOffs[17]}" />
        <uc:UserCalendarCell
            Grid.Row="4"
            Grid.Column="4"
