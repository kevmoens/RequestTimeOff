            TimeOffs="{Binding TimeOffs[26]}" />
        <uc:UserCalendarCell
            Grid.Row="5"
            Grid.Column="6"
            DisplayDate="{Binding Dates[27]}"
            Holidays="{Binding Holidays}"
            TimeOffs="{Binding TimeOffs[27]}" />

        <uc:UserCalendarCell
            Grid.Row="6"
            Grid.Column="0"
            DisplayDate="{Binding Dates[28]}"
            Holidays="{Binding Holidays}"
            TimeOffs="{Binding TimeOffs[28]}" />
        <uc:UserCalendarCell
            Grid.Row="6"
            Grid.Column="1"
