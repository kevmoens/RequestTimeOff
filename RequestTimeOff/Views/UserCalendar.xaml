                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[31]}" />
        <uc:UserCalendarCell
                Grid.Row="4"
                Grid.Column="2"
                DisplayDate="{Binding Dates[32]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[32]}" />
        <uc:UserCalendarCell
                Grid.Row="4"
                Grid.Column="3"
                DisplayDate="{Binding Dates[33]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[33]}" />
        <uc:UserCalendarCell
                Grid.Row="4"
                Grid.Column="4"
                DisplayDate="{Binding Dates[34]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[34]}" />
        <uc:UserCalendarCell
                Grid.Row="4"
                Grid.Column="5"
                DisplayDate="{Binding Dates[35]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[35]}" />
        <uc:UserCalendarCell
                Grid.Row="4"
                Grid.Column="6"
                DisplayDate="{Binding Dates[36]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[36]}" />

        <uc:UserCalendarCell
                Grid.Row="5"
                Grid.Column="0"
                DisplayDate="{Binding Dates[40]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[40]}" />
        <uc:UserCalendarCell
                Grid.Row="5"
                Grid.Column="1"
                DisplayDate="{Binding Dates[41]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[41]}" />
        <uc:UserCalendarCell
                Grid.Row="5"
                Grid.Column="2"
