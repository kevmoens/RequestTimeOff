            TimeOffs="{Binding TimeOffs[31]}" />
        <uc:UserCalendarCell
            Grid.Row="6"
            Grid.Column="4"
            DisplayDate="{Binding Dates[32]}"
            Holidays="{Binding Holidays}"
            TimeOffs="{Binding TimeOffs[32]}" />
        <uc:UserCalendarCell
            Grid.Row="6"
            Grid.Column="5"
            DisplayDate="{Binding Dates[33]}"
            Holidays="{Binding Holidays}"
