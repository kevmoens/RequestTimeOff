<UserControl
    x:Class="RequestTimeOff.Views.UserCalendar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RequestTimeOff.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:RequestTimeOff.UserControls"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding Path=LoadedCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="13" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button Command="{Binding PreviousCommand}" Content="&lt;" />
        <TextBlock
            Grid.Column="2"
            HorizontalAlignment="Center"
            Text="{Binding Year}" />
        <TextBlock
            Grid.Column="3"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            Text="{Binding MonthName}" />

        <Button
            Grid.Column="6"
            Command="{Binding NextCommand}"
            Content="&gt;" />

        <TextBlock
            Grid.Row="1"
            Grid.Column="0"
            HorizontalAlignment="Center"
            Text="Sun" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Center"
            Text="Mon" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="2"
            HorizontalAlignment="Center"
            Text="Tue" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="3"
            HorizontalAlignment="Center"
            Text="Wed" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="4"
            HorizontalAlignment="Center"
            Text="Thur" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="5"
            HorizontalAlignment="Center"
            Text="Fri" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="6"
            HorizontalAlignment="Center"
            Text="Sat" />
        <uc:UserCalendarCell
            Grid.Row="2"
            Grid.Column="0"
            DisplayDate="{Binding Dates[0]}"
            Holidays="{Binding Holidays}"
            TimeOffs="{Binding TimeOffs[0]}" />
        <uc:UserCalendarCell
            Grid.Row="2"
            Grid.Column="1"
            DisplayDate="{Binding Dates[1]}"
            Holidays="{Binding Holidays}"
            TimeOffs="{Binding TimeOffs[1]}" />
        <uc:UserCalendarCell
            Grid.Row="2"
            Grid.Column="2"
            DisplayDate="{Binding Dates[2]}"
            Holidays="{Binding Holidays}"
            TimeOffs="{Binding TimeOffs[2]}" />
        <uc:UserCalendarCell
            Grid.Row="2"
            Grid.Column="3"
            DisplayDate="{Binding Dates[3]}"
            Holidays="{Binding Holidays}"
            TimeOffs="{Binding TimeOffs[3]}" />
        <uc:UserCalendarCell
            Grid.Row="2"
            Grid.Column="4"
            DisplayDate="{Binding Dates[4]}"
            Holidays="{Binding Holidays}"
            TimeOffs="{Binding TimeOffs[4]}" />
        <uc:UserCalendarCell
            Grid.Row="2"
            Grid.Column="5"
            DisplayDate="{Binding Dates[5]}"
            Holidays="{Binding Holidays}"
            TimeOffs="{Binding TimeOffs[5]}" />
        <uc:UserCalendarCell
            Grid.Row="2"
            Grid.Column="6"
            DisplayDate="{Binding Dates[6]}"
            Holidays="{Binding Holidays}"
            TimeOffs="{Binding TimeOffs[6]}" />

        <uc:UserCalendarCell
            Grid.Row="3"
            Grid.Column="0"
            DisplayDate="{Binding Dates[7]}"
            Holidays="{Binding Holidays}"
            TimeOffs="{Binding TimeOffs[7]}" />
        <uc:UserCalendarCell
            Grid.Row="3"
            Grid.Column="1"
            DisplayDate="{Binding Dates[8]}"
            Holidays="{Binding Holidays}"
            TimeOffs="{Binding TimeOffs[8]}" />
        <uc:UserCalendarCell
            Grid.Row="3"
            Grid.Column="2"
            DisplayDate="{Binding Dates[9]}"
            Holidays="{Binding Holidays}"
            TimeOffs="{Binding TimeOffs[9]}" />
        <uc:UserCalendarCell
            Grid.Row="3"
            Grid.Column="3"
            DisplayDate="{Binding Dates[10]}"
            Holidays="{Binding Holidays}"
            TimeOffs="{Binding TimeOffs[10]}" />
        <uc:UserCalendarCell
            Grid.Row="3"
            Grid.Column="4"
            DisplayDate="{Binding Dates[11]}"
            Holidays="{Binding Holidays}"
            TimeOffs="{Binding TimeOffs[11]}" />
        <uc:UserCalendarCell
            Grid.Row="3"
            Grid.Column="5"
            DisplayDate="{Binding Dates[12]}"
            Holidays="{Binding Holidays}"
            TimeOffs="{Binding TimeOffs[12]}" />
        <uc:UserCalendarCell
            Grid.Row="3"
