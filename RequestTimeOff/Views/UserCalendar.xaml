        <uc:UserCalendarCell
                Grid.Row="6"
                Grid.Column="3"
                DisplayDate="{Binding Dates[53]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[53]}" />
        <uc:UserCalendarCell
                Grid.Row="6"
                Grid.Column="4"
                DisplayDate="{Binding Dates[54]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[54]}" />
        <uc:UserCalendarCell
                Grid.Row="6"
                Grid.Column="5"
                DisplayDate="{Binding Dates[55]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[55]}" />
        <uc:UserCalendarCell
                Grid.Row="6"
                Grid.Column="6"
                DisplayDate="{Binding Dates[56]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[56]}" />

        <uc:UserCalendarCell
                Grid.Row="7"
                Grid.Column="0"
                DisplayDate="{Binding Dates[60]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[60]}" />
        <uc:UserCalendarCell
                Grid.Row="7"
                Grid.Column="1"
                DisplayDate="{Binding Dates[61]}"
                Holidays="{Binding Holidays}"
                TimeOffs="{Binding TimeOffs[61]}" />
    </Grid>
</UserControl>

